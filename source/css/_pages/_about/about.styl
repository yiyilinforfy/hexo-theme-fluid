.about-avatar
  position relative
  margin -1rem auto 1rem
  width 6rem
  height 6rem
  z-index 3

  img
    width 100%
    height 100%
    border-radius 50%
    background-color transparent
    object-fit cover
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

.about-info
  & > div
    margin-bottom .5rem

.about-name
  font-size 1.75rem
  font-weight bold

.about-intro
  font-size 1rem

.about-icons
  & > a:not(:last-child)
    margin-right .5rem

  & > a > i
    font-size 1.5rem

.about-description
  font-size 1.3rem
  line-height 1.6
  margin-top 3rem
  text-align left

@media (max-width: 1200px)
  .about-description
    font-size 1.3rem
    
@media (max-width: 922px)
  .about-description
     font-size 1.2rem

@media (max-width:768px)
  .about-description
     font-size 1rem
    
@media (max-width:575px)
  .about-description
     font-size 0.9rem
      

